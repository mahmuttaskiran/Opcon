<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

  <View
      android:layout_width="match_parent"
      android:layout_height="0.1dp"
      android:id="@+id/d"
      android:background="@color/lightGrey"/>

  <com.opcon.ui.views.TitleView
      android:id="@+id/seeAll"
      android:layout_width="match_parent"
      android:layout_height="@dimen/titleHeight"
      app:color="@color/mainTitleColor"
      app:content="@string/invite_your_friends"
      app:contentColor="@color/mainTitleContextColor"
      app:rightIconColor="@color/mainTitleContextColor"
      app:rightIcon="@drawable/ic_close_black_18dp"
      app:rightIconStrokeColor="@color/mainTitleContextColor"
      app:leftIcon="@drawable/ic_person_add_white_18dp"
      app:leftIconColor="@color/mainTitleContextColor"/>

  <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:layout_below="@id/seeAll"
      android:id="@+id/divider3"
      android:background="@color/lightGrey"/>

  <android.support.v7.widget.RecyclerView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:paddingLeft="5dp"
      android:paddingRight="10dp"
      android:id="@+id/recyclerView"
      android:layout_below="@id/divider3"/>

  <View
      android:layout_width="match_parent"
      android:layout_height="0.1dp"
      android:layout_marginTop="10dp"
      android:layout_below="@id/recyclerView"
      android:id="@+id/divider"
      android:background="@color/lightGrey"/>


</RelativeLayout>