<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="130dp"
                android:layout_height="130dp"
                                    android:layout_marginLeft="8dp"
                                    app:cardElevation="0.8dp"
                                    app:cardUseCompatPadding="true"
                android:gravity="center"
    android:layout_centerInParent="true">

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent">

   <com.opcon.ui.views.CircleRelativeLayout
       android:layout_width="45dp"
       android:layout_height="45dp"
       android:layout_marginTop="25dp"
       android:id="@+id/crl"
       android:layout_centerHorizontal="true"
       app:circleColor="@color/white"
       app:circleStrokeColor="@color/colorPrimary">

     <ImageView
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:id="@+id/icon"
         android:layout_centerInParent="true"
         android:tint="@color/white"
         android:src="@drawable/condition_ic_location_off_black_18dp"/>

   </com.opcon.ui.views.CircleRelativeLayout>

   <TextView
       android:layout_width="130dp"
       android:maxWidth="130dp"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:textSize="10sp"
       android:id="@+id/title"

       android:gravity="center"
       android:padding="5dp"
       android:text="if her device rigging as bla bla bla"
       android:layout_below="@+id/crl"/>

 </RelativeLayout>


</android.support.v7.widget.CardView>