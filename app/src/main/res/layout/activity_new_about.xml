<?xml version="1.0" encoding="utf-8"?>
<com.opcon.ui.views.CloudRelativeView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:iconMaxSize="2.5"
    app:maxIcon="30"
    app:bgColor="@color/colorPrimary"
    app:iconColor="@color/colorPrimaryDark"
    tools:context="com.opcon.ui.activities.NewAboutActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:text="@string/app_name"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/version"
                android:gravity="center"
                android:textColor="@color/lightGrey"
                android:textSize="12sp"
                android:text="Sürüm 0.1.903"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/versionName"
                android:gravity="center"
                android:textColor="@color/lightGrey"
                android:textSize="12sp"
                android:text="@string/version_name"
                android:layout_marginBottom="25dp"/>



            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/application_icon"/>


           <com.opcon.ui.views.CloudRelativeView
               android:layout_width="match_parent"
               android:layout_height="1070dp"
               android:layout_marginTop="20dp"
               app:maxIcon="0"
               app:bgColor="@color/white"
               app:topCloudColor="@color/colorPrimary"
               app:topCloudWidth="20dp">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:orientation="vertical">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="18sp"
                       android:id="@+id/copy_right_Mahmut_Taskiran"
                       android:text="@string/copy_right_Mahmut_Taskiran"
                       android:layout_marginTop="45dp"
                       android:textColor="@color/strongGrey"
                       android:gravity="center"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/all_right_reversed"
                       android:layout_marginTop="2dp"
                       android:textColor="@color/strongGrey"
                       android:gravity="center"/>

                   <android.support.v7.widget.AppCompatButton
                       android:layout_width="wrap_content"
                       android:layout_height="35dp"
                       android:background="@color/colorSecondary"
                       android:id="@+id/seeCopyrightInformation"
                       android:textColor="@color/white"
                       android:layout_marginTop="20dp"
                       android:layout_marginBottom="10dp"
                       android:paddingLeft="25dp"
                       android:paddingRight="25dp"
                       android:text="@string/copy_right_information"/>

                   <android.support.v7.widget.CardView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       app:cardElevation="3dp"
                       android:layout_margin="25dp">

                       <include layout="@layout/thanks_for"></include>

                   </android.support.v7.widget.CardView>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/by_mmt_taskiran"
                       android:gravity="center"
                       android:paddingLeft="20dp"
                       android:paddingRight="20dp"
                       android:layout_marginTop="20dp"
                       android:text="@string/developed_from_izmir_adiyaman"/>

               </LinearLayout>

           </com.opcon.ui.views.CloudRelativeView>



        </LinearLayout>

    </ScrollView>



</com.opcon.ui.views.CloudRelativeView>
