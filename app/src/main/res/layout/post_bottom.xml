<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_height="40dp">

  <android.support.v7.widget.CardView
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:id="@+id/seeRelationalNotifier"
      android:layout_centerVertical="true"
      android:visibility="visible"
      android:layout_marginRight="8dp"
      app:cardUseCompatPadding="false"
      app:cardBackgroundColor="@color/colorPrimary"
      app:cardElevation="0.9dp"
      app:cardCornerRadius="12dp">

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:padding="2dp"
        android:src="@drawable/ic_notifications_18"
        android:tint="@color/white"/>

  </android.support.v7.widget.CardView>

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:visibility="gone"
        android:layout_toRightOf="@id/seeRelationalNotifier"
        android:layout_centerVertical="true"
        android:id="@+id/privacy"
        android:src="@drawable/ic_notifications_18"
        android:tint="@color/strongGrey"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:id="@+id/timestamp"
        android:layout_toRightOf="@id/seeRelationalNotifier"
        android:layout_alignWithParentIfMissing="true"
        android:text="12:00 PM"
        android:textSize="14sp"/>

  <ImageView
      android:layout_width="18dp"
      android:layout_height="18dp"
      android:layout_centerVertical="true"
      android:id="@+id/options"
      android:layout_alignParentRight="true"
      android:src="@drawable/ic_more_vert_black_18dp"
      android:tint="@color/materialGrey"/>

</RelativeLayout>